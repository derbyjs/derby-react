    "dist/"
  ],
  "scripts": {
    "build": "npx tsc",
    "prepare": "npm run build",
    "lint": "npx eslint **/*.ts && npx prettier . --check",
    "lint:fix": "npx eslint --fix **/*.ts && npx prettier . --write",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/derbyjs/derby-react.git"
  },
  "author": "Eric Hwang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/derbyjs/derby-react/issues"
  },
  "homepage": "https://github.com/derbyjs/derby-react#readme",
  "peerDependencies": {
    "derby": "^4.x",
    "racer": "^2.x",
    "react": "^19.x || ^18.x",
    "react-dom": "^19.x || ^18.x"
  },
  "peerDependenciesMeta": {
    "derby": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^10.0.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
