    "@types/sharedb": "^5.1.0",
    "@vitejs/plugin-react": "^5.0.1",
    "derby": "^4.2.3",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^26.1.0",
    "prettier": "3.6.2",
    "racer": "^2.3.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  }
